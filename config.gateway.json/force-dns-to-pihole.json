{
	"_comment1": "Forwards all internal port 53 DNS traffic to a Pi-hole, preventing hard-coded DNS servers. ",
	"_comment2": "Replace 'eth0' with your USG's LAN interface and '192.168.0.105' with your Pi-hole's IP address",
	"service": {
		"nat": {
			"rule": {
				"1": {
					"description": "Redirect DNS requests",
					"destination": {
						"port": "53"
					},
					"inbound-interface": "eth0",
					"inside-address": {
						"address": "192.168.0.105",
						"port": "53"
					},
					"source": {
						"address": "!192.168.0.105"
					},
					"log": "disable",
					"protocol": "tcp_udp",
					"type": "destination"
				},
				"6000": {
					"description": "MASQ DNS requests to LAN",
					"destination": {
						"address": "192.168.0.105",
						"port": "53"
					},
					"log": "disable",
					"outbound-interface": "eth0",
					"protocol": "tcp_udp",
					"type": "masquerade"
				}
			}
		}
	}
}
